# ===========================================
# Voice Commander Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and update with your actual values

# Backend API URL
# Development: Local backend server
NEXT_PUBLIC_API_URL=http://localhost:3000

# Production: Railway backend URL
# NEXT_PUBLIC_API_URL=https://your-railway-backend.up.railway.app

# WebSocket URL (for real-time SSE connections)
# Development: Same as API URL
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Production: WebSocket endpoint
# NEXT_PUBLIC_WS_URL=wss://your-railway-backend.up.railway.app
