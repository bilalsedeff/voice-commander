# Voice MCP Gateway Environment Configuration
# Copy this file to .env and fill in your actual values

# === REQUIRED: API Keys ===
# OpenAI API key for Whisper STT and TTS
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API key for TTS (optional, fallback to OpenAI TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# === Server Configuration ===
NODE_ENV=development
PORT=8710
WEBSOCKET_PORT=8711

# === Voice Processing Configuration ===
VOICE_STT_ENGINE=whisper
VOICE_TTS_ENGINE=openai
VOICE_VAD_THRESHOLD=0.5
VOICE_MIN_SPEECH_DURATION=250

# === MCP Configuration ===
MCP_TRANSPORT=websocket
MCP_TIMEOUT=5000
MCP_RETRY_COUNT=3

# === Security Configuration ===
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=604800

# === Database Configuration ===
DATABASE_URL=postgresql://voice_user:voice_pass@localhost:5432/voice_mcp
REDIS_URL=redis://localhost:6379

# === Audio Processing Configuration ===
AUDIO_BUFFER_SIZE=16384
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# === Performance Configuration ===
MAX_VOICE_SESSIONS=100
VOICE_LATENCY_THRESHOLD=1000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# === Logging Configuration ===
LOG_LEVEL=info
LOG_FILE=logs/voice-mcp.log

# === Development Configuration ===
ENABLE_CORS=true
ENABLE_DEBUGGING=true
MOCK_AUDIO_PROCESSING=false

# === Desktop Commander MCP Configuration ===
DESKTOP_COMMANDER_ENABLED=true
DESKTOP_COMMANDER_COMMAND=npx
DESKTOP_COMMANDER_ARGS=-y,@wonderwhy-er/desktop-commander

# === Security Headers ===
HELMET_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100