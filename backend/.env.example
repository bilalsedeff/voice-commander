# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/voice_commander?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption for OAuth tokens (AES-256)
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# OAuth Providers

# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/oauth/google/callback

# Slack API
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3001/api/oauth/slack/callback

# Notion API
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:3001/api/oauth/notion/callback

# GitHub API
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3001/api/oauth/github/callback

# OpenAI API (for LLM intent recognition)
OPENAI_API_KEY=your-openai-api-key

# MCP Server Endpoints (HTTP+SSE Transport)
MCP_GOOGLE_CALENDAR_ENDPOINT=https://mcp.googleapis.com/calendar
MCP_SLACK_ENDPOINT=https://mcp.slack.com/api
MCP_GITHUB_ENDPOINT=https://mcp.github.com/api

# MCP Health Check Configuration
MCP_PING_INTERVAL_MS=30000
MCP_PING_TIMEOUT_MS=5000
MCP_MAX_RECONNECT_ATTEMPTS=3
MCP_RECONNECT_BACKOFF_MS=1000

# Voice Processing Configuration
VOICE_LATENCY_THRESHOLD=1000
VOICE_CONFIDENCE_THRESHOLD=0.6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
