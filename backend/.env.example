# ===========================================
# Voice Commander Backend Environment Variables
# ===========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file with secrets to version control

# Server Configuration
NODE_ENV=development  # development | production
PORT=3000
FRONTEND_URL=http://localhost:3001  # Production: https://voicecommander.org

# Database (PostgreSQL)
# Development: Local PostgreSQL
# Production: Railway PostgreSQL URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/voice_commander?schema=public"

# Redis (Session Management)
# Development: Local Redis
# Production: Railway Redis URL
REDIS_URL="redis://localhost:6379"

# JWT Authentication
# Generate secure keys with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption for OAuth Tokens (AES-256-GCM)
# Generate secure key with: openssl rand -base64 32
# CRITICAL: Use different key in production!
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# ===========================================
# OAuth Provider Configuration
# ===========================================
# Get credentials from respective provider dashboards

# Google (Calendar + Contacts API)
# Setup: https://console.cloud.google.com/
# Enable: Google Calendar API + Google People API (Contacts)
# Required scopes: calendar.events, calendar.readonly, contacts.readonly, contacts
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Development redirect
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
# Production redirect (update in Google Cloud Console):
# https://voicecommander.org/auth/google/callback

# Slack API
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3001/api/oauth/slack/callback

# Notion API
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:3001/api/oauth/notion/callback

# GitHub API
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3001/api/oauth/github/callback

# ===========================================
# AI Configuration
# ===========================================

# OpenAI API (GPT-4 for LLM Orchestration)
# Get API key: https://platform.openai.com/api-keys
# Used for: Intent classification, tool selection, natural response generation
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# MCP (Model Context Protocol) Configuration
# ===========================================
# Note: Google Calendar and Contacts use embedded MCP (no external endpoint needed)
# Slack/GitHub would use HTTP+SSE transport if implemented

# MCP Server Endpoints (HTTP+SSE Transport) - Optional
# MCP_SLACK_ENDPOINT=https://mcp.slack.com/api
# MCP_GITHUB_ENDPOINT=https://mcp.github.com/api

# MCP Health Check Configuration
MCP_PING_INTERVAL_MS=30000
MCP_PING_TIMEOUT_MS=5000
MCP_MAX_RECONNECT_ATTEMPTS=3
MCP_RECONNECT_BACKOFF_MS=1000

# Voice Processing Configuration
VOICE_LATENCY_THRESHOLD=1000
VOICE_CONFIDENCE_THRESHOLD=0.6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
